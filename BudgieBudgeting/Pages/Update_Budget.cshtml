@page
@model BudgieBudgeting.Pages.Update_BudgetModel
@{
    ViewData["Title"] = "Update Budget";
}
<!DOCTYPE html>
<html>
<head>
    <title>Update Budget</title>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link rel="stylesheet" href="/css/site.css">
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />

    <!-- Include Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <style>
        .budget-columns {
            display: flex;
            justify-content: space-between;
        }

        .budget-column {
            width: 30%;
            margin-bottom: 20px; /* Added margin for spacing */
        }

        .entry-container {
            margin-bottom: 10px; /* Space between entries */
        }

            .entry-container textarea {
                width: calc(100% - 40px); /* Adjust width for the trash icon */
                display: inline-block; /* Display inline to line up with the trash icon */
            }

            .entry-container button {
                display: inline-block; /* Keep button aligned with the textarea */
                vertical-align: top; /* Aligns the button to the top of the textarea */
            }

        .add-button {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title" style="text-align:center">Update Budget</h3>
                    </div>
                    <div class="panel-body">
                        <form method="post">
                            <div class="budget-columns">
                                <div class="budget-column" id="needsColumn">
                                    <h4 style="text-align:center;">Needs</h4>
                                    @for (int i = 0; i < Model.Needs.Count; i++)
                                    {
                                        <div class="entry-container">
                                            <textarea class="form-control" name="Wants" asp-for="Needs[i].NeedName" value="@Model.Needs[i].NeedName"></textarea>
                                            <textarea class="form-control" name="Wants" asp-for="Needs[i].NeedValue" value="@Model.Needs[i].NeedValue"></textarea>
                                            <button type="button" class="btn btn-danger btn-sm" onclick="removeEntry(this)">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    }
                                    <!-- Retrieve data from database here for needs -->
                                    <div class="add-button">
                                        <button type="button" class="btn btn-primary" onclick="addEntry('needsColumn', 'Needs')">+</button>
                                    </div>
                                </div>
                                <div class="budget-column" id="wantsColumn">
                                    <h4 style="text-align:center;">Wants</h4>
                                    @for (int i = 0; i < Model.Wants.Count; i++)
                                    {
                                        <div class="entry-container">
                                            <textarea class="form-control" name="Wants" asp-for="Wants[i].WantName" value="@Model.Wants[i].WantName"></textarea>
                                            <textarea class="form-control" name="Wants" asp-for="Wants[i].WantValue" value="@Model.Wants[i].WantValue"></textarea>
                                            <button type="button" class="btn btn-danger btn-sm" onclick="removeEntry(this)">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    }
                                    <!-- Retrieve data from database here for wants -->
                                    <div class="add-button">
                                        <button type="button" class="btn btn-primary" onclick="addEntry('wantsColumn', 'Wants')">+</button>
                                    </div>
                                </div>
                                <div class="budget-column" id="savingsColumn">
                                    <h4 style="text-align:center;">Savings</h4>
                                    @for (int i = 0; i < Model.Savings.Count; i++)
                                    {
                                        <div class="entry-container">
                                            <textarea class="form-control" name="Wants" asp-for="Savings[i].SavingName" value="@Model.Savings[i].SavingName"></textarea>
                                            <textarea class="form-control" name="Wants" asp-for="Savings[i].SavingValue" value="@Model.Savings[i].SavingValue"></textarea>
                                            <button type="button" class="btn btn-danger btn-sm" onclick="removeEntry(this)">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    }
                                    <!-- Retrieve data from database here for savings -->
                                    <div class="add-button">
                                        <button type="button" class="btn btn-primary" onclick="addEntry('savingsColumn', 'Savings')">+</button>
                                    </div>
                                </div>
                            </div>
                            <div style="margin-top: 20px;">
                                <input style="background-color: #44b3b1" class="btn btn-lg btn-success btn-block" type="submit" value="Update Budget">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function addEntry(containerId, name) {
            var container = document.getElementById(containerId);
            var newEntry = document.createElement('div');
            newEntry.className = 'entry-container';
            newEntry.innerHTML = `
                                <textarea class="form-control" name="${name}[]" placeholder="Enter ${name.toLowerCase()}"></textarea>
                                <button type="button" class="btn btn-danger btn-sm" onclick="removeEntry(this)">
                                    <i class="fas fa-trash"></i>
                                </button>
                            `;
            container.querySelector('.add-button').before(newEntry);
        }

        function removeEntry(button) {
            // Remove the entry (textarea and button) that corresponds to the trash icon clicked
            var entryContainer = button.parentElement;
            entryContainer.remove();
        }
    </script>
</body>
</html>
