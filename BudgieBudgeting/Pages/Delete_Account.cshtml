@page
@model BudgieBudgeting.Pages.Delete_AccountModel
@{
    ViewData["Title"] = "Delete Account";
}
﻿
<!DOCTYPE html>
<html>
<head>
    <title>Delete Account</title>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="/js/site.js"></script>
    <link rel="stylesheet" href="/css/site.css">
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" /> <!--Favicon May need to be updated on each page-->
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Delete account :(</h3>
                    </div>
                    <div class="panel-body">
                        <form method="post">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" asp-for=DeleteCredential.Email type="email" placeholder="YourName@example.com">
                                    <span asp-validation-for="DeleteCredential.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" asp-for=DeleteCredential.Username type="text" placeholder="Username">
                                    <span asp-validation-for=DeleteCredential.Username class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" asp-for=DeleteCredential.Password type="password" placeholder="Password">
                                    <span asp-validation-for=DeleteCredential.Password class="text-danger"></span>
                                </div>
                                <button type="submit" style="background-color: #44b3b1" class="btn btn-lg btn-success btn-block">Delete</button>
                            </fieldset>
                        </form>
                        @section Scripts {
                            <partial name="_ValidationScriptsPartial" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

